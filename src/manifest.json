{
	"name": "Q-Aricle Audio",
	"description": "Scan a QR code to listen to the rest of an article as a podcast while multitasking",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html",
		"default_title": "Open",
		"default_icon": "assets/favicon-dark-128.png"
	},
	"icons": {
		"128": "assets/favicon-dark-128.png"
	},
	"background": {
		"service_worker": "background-wrapper.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://google.com/*"
			],
			"js": [
				"content.bundle.js"
			]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"permissions": [
		"scripting",
		"tts"
	],
	"host_permissions": [
		"https://google.com/"
	]
}